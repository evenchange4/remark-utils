{
  "name": "remark-utils",
  "version": "1.0.0",
  "description": "remark-utils",
  "main": "lib/index.js",
  "module": "es/index.js",
  "sideEffects": false,
  "files": [
    "es",
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf {lib,es}",
    "build:cjs": "NODE_ENV='cjs' babel src --out-dir lib --ignore '__tests__','src/**/*.test.js','src/**/*.example.js'",
    "build:es": "NODE_ENV='es' babel src --out-dir es --ignore '__tests__','src/**/*.test.js','src/**/*.example.js'",
    "build:flow": "flow-copy-source -i '**/*.test.js' -i '**/*.example.js' src es && flow-copy-source -i '**/*.test.js' -i '**/*.example.js' src lib",
    "build": "npm run build:cjs && npm run build:es && npm run build:flow",
    "test": "NODE_ENV='test' TZ='UTC' jest --coverage --runInBand",
    "test:watch": "npm run test -- --watch",
    "flow": "flow",
    "flow-coverage": "flow-coverage-report",
    "eslint": "eslint ./",
    "format": "prettier --write '**/*.{js,json,md,css,yaml,yml}' '*.{js,json,md,css,yaml,yml}'",
    "changelog": "github-changes -o evenchange4 -r remark-utils -b master -f ./CHANGELOG.md --order-semver --use-commit-body"
  },
  "dependencies": {
    "elasticlunr": "^0.9.5",
    "gatsby-remark-autolink-headers": "^2.0.11",
    "gatsby-remark-prismjs": "^3.0.3",
    "prismjs": "^1.15.0",
    "remark": "^10.0.0",
    "remark-grid-tables": "^1.1.1",
    "remark-html": "^8.0.0",
    "remark-strip-html": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "7.1.6",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/preset-env": "7.1.6",
    "@babel/preset-flow": "7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "babel-plugin-add-module-exports": "1.0.0",
    "codecov": "3.1.0",
    "eslint": "5.9.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-flowtype": "3.2.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "22.0.0",
    "eslint-plugin-prettier": "3.0.0",
    "flow-bin": "0.86.0",
    "flow-copy-source": "2.0.2",
    "flow-coverage-report": "0.6.0",
    "github-changes": "1.1.2",
    "husky": "1.1.4",
    "jest": "23.6.0",
    "lint-staged": "8.0.5",
    "prettier": "1.15.2"
  },
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "homepage": "https://github.com/evenchange4/remark-utils#readme",
  "license": "MIT",
  "repository": "https://github.com/evenchange4/remark-utils",
  "keywords": [
    "remark",
    "remark-utils",
    "markdown"
  ],
  "babel": {
    "presets": [
      "@babel/preset-flow"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ],
    "env": {
      "es": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "loose": true,
              "modules": false
            }
          ]
        ]
      },
      "cjs": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "loose": true
            }
          ]
        ],
        "plugins": [
          "babel-plugin-add-module-exports"
        ]
      },
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "loose": true
            }
          ]
        ]
      }
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*.example.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/es/",
      "<rootDir>/lib/"
    ],
    "resetMocks": true,
    "resetModules": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 78,
        "lines": 71,
        "statements": 70
      }
    }
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "flow-coverage-report": {
    "concurrentFiles": 5,
    "globIncludePatterns": [
      "**/*.js"
    ],
    "globExcludePatterns": [
      "node_modules/**",
      "public/**",
      "lib/**",
      "es/**",
      "coverage/**",
      "flow-typed/**"
    ],
    "reportTypes": [
      "text"
    ],
    "threshold": 85
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb-base",
      "plugin:flowtype/recommended",
      "plugin:jest/recommended",
      "prettier",
      "prettier/flowtype"
    ],
    "plugins": [
      "prettier",
      "jest",
      "flowtype"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "prettier/prettier": "error",
      "import/no-named-as-default": 0,
      "import/no-extraneous-dependencies": 0
    }
  },
  "lint-staged": {
    "*.{js,json,md,css,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
